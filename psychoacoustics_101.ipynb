    "%matplotlib inline\n",
    "\n",
    "# Sample rate\n",
    "Fs = 48e3\n",
    "\n",
    "# Sample period\n",
    "Ts = 1/Fs\n",
    "\n",
    "# Carrier amplitude\n",
    "A = 0.5\n",
    "\n",
    "# Carrier frequency\n",
    "f_c = 2e3\n",
    "\n",
    "# Modulation index\n",
    "mod_idx = 0.6\n",
